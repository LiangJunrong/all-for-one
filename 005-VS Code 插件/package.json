{
	"name": "jsliang",
	"displayName": "jsliang",
	"publisher": "jsliang",
	"description": "jsliang 开发的插件，欢迎定制需求",
	"version": "0.2.7",
	"engines": {
		"vscode": "^1.44.0"
	},
	"keywords": [
		"jsliang",
		"前端",
		"markdown"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/LiangJunrong/all-for-one"
	},
	"categories": [
		"Other"
	],
	"icon": "images/icon.jpg",
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/javascript.json"
			},
			{
				"language": "html",
				"path": "./snippets/html.json"
			},
			{
				"language": "markdown",
				"path": "./snippets/markdown.json"
			},
			{
				"language": "javascriptreact",
				"path": "./snippets/react.json"
			}
		],
		"keybindings": [
			{
				"command": "jsliang.functionComments",
				"key": "ctrl+shift+i",
				"mac": "cmd+shift+i",
				"when": "editorTextFocus"
			},
			{
				"command": "jsliang.variableFormatConversion",
				"key": "ctrl+shift+j",
				"mac": "cmd+shift+j",
				"when": "editorHasSelection"
			}
		],
		"commands": [
			{
				"command": "jsliang.initDirectory",
				"title": "MD：初始化序列号"
			},
			{
				"command": "jsliang.buildSimpleDirectory",
				"title": "MD：生成简化版目录"
			},
			{
				"command": "jsliang.buildDirectory",
				"title": "MD：生成目录"
			},
			{
				"command": "jsliang.statisticsLog",
				"title": "MD：统计日志"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == markdown",
					"command": "jsliang.initDirectory",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == markdown",
					"command": "jsliang.buildSimpleDirectory",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == markdown",
					"command": "jsliang.buildDirectory",
					"group": "navigation@3"
				},
				{
					"when": "resourceLangId == markdown",
					"command": "jsliang.statisticsLog",
					"group": "navigation@4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
