{
	"name": "run-script",
	"displayName": "run-script",
	"publisher": "matthiaskuech",
	"repository": {
		"url": "https://github.com/snipem/vscode-run-script"
	},
	"description": "An extension for running the first comment in your file in the Terminal",
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.runscript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.runscript",
				"title": "Run Script"
			}
		],
		"keybindings": {
			"key": "ctrl+l",
			"mac": "cmd+l",
			"command": "extension.runscript"
		},
		"configuration": {
			"title": "Run Script",
			"properties": {
				"runscript.startDebuggingWhenNoRunStatementFound": {
					"type": "boolean",
					"default": false,
					"description": "Starts the default debugger if no run-statement was found in the current file."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.1",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"tslint": "^6.1.1",
		"vscode-test": "^1.3.0"
	}
}